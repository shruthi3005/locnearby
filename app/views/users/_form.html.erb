<%= form_with model: @user,  local: true do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
</div>

<div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
</div>


<%= form.fields_for :user_profile do |ff| %>

  <div class="field">
    <%= ff.label :name %>
    <%= ff.text_field :name %>
  </div>

  <div class="field">
    <%= ff.label :dob %>
    <%= ff.date_field :dob, "data-provide" => 'datepicker' %>
  </div>

  <div class="field">
    <%= ff.label :gender %>
    <%= ff.select :gender, %w{Male Female Other}, :prompt => 'Select', required: true %>
  </div>
    

<%= ff.fields_for :addresses do |f| %>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.text_field :lat %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.text_field :lon %>
  </div>
<% end %>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
